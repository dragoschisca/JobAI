@inject Blazored.LocalStorage.ILocalStorageService LocalStorage


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FrontendBlazor</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ShowCompanies">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Companies
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ShowJobs">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Jobs
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Login" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/ShowProfile/" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>
    </nav>
</div>

@code
{
    private Guid userId;

    protected override async Task OnInitializedAsync()
    {
        var idString = await LocalStorage.GetItemAsync<string>("userId");

        if (Guid.TryParse(idString, out Guid parsedId))
        {
            userId = parsedId;
        }
        else
        {
            userId = Guid.Empty; // sau redirecționează spre login
        }
    }
}
